<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/two_pane_land_FrameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.uoregon.bbird.piggamelab3.MainActivity"
    tools:ignore="MergeRootFrame" >

	<ImageView
	    android:id="@+id/imageView2"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:baselineAlignBottom="false"
	    android:contentDescription="@string/two_pigs"
	    android:cropToPadding="false"
	    android:scaleType="fitXY"
	    android:src="@drawable/pig" />

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="horizontal" >
	
	    <fragment
	        android:id="@+id/fragment1"
	        android:name="edu.uoregon.bbird.piggamelab3.MainFragment"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1" />
	
	    <fragment
	        android:id="@+id/fragment2"
	        android:name="edu.uoregon.bbird.piggamelab3.GameFragment"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1" />
	
		</LinearLayout>
</FrameLayout>