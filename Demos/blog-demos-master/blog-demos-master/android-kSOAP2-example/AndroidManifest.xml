                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SimpleKSoapActivity"
            android:label="@string/title_activity_simple_ksoap" />
        
        <activity
            android:name=".SimpleKSoapExample1Activity"
